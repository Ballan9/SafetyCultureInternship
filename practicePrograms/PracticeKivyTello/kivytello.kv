#: import Joystick joystick

<DragableJoystick>

<JoystickPanel@BoxLayout>
    orientation: 'vertical'
    Label:
        id: label
    DragableJoystick:
        id: stick
        sticky: False

<KivyTelloRoot>:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, 0.2
        orientation: 'horizontal'
        Button:
            id: quit
            text: 'QUIT'
            font: 8
        ToggleButton:
            id: takeoff
            text: 'TAKE-OFF' if self.state == 'normal' else 'LAND'
            font: 8
        ToggleButton:
            id: rotcw
            text: 'START CLOCK-WISE' if self.state == 'normal' else 'STOP CLOCK-WISE'
            font: 8
        ToggleButton:
            id: rotccw
            text: 'START ANTI CLOCK-WISE' if self.state == 'normal' else 'STOP ANTI CLOCK-WISE'
            font: 8
    BoxLayout:
        orientation: 'horizontal'
        JoystickPanel:
            id: pad_left
        JoystickPanel:
            id: pad_right

#KivyTelloRoot:
